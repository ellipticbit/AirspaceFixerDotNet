<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:AirspaceFixer">
    <Style TargetType="local:AirspacePanel">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:AirspacePanel">

                    <Grid HorizontalAlignment="{TemplateBinding HorizontalAlignment}" VerticalAlignment="{TemplateBinding VerticalAlignment}">
                        <Image Name="PART_AirspaceScreenshot" Visibility="Hidden" />

                        <ContentControl Name="PART_AirspaceContent" Content="{TemplateBinding Content}" />
                    </Grid>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
